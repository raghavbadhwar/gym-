# ============================================
# GymBot-Core Configuration
# Production-ready WhatsApp Agent for Gyms
# ============================================

# Database
# SQLite (default - no Docker needed!)
DATABASE_URL=sqlite:///./gymbuddy.db
# For PostgreSQL (production): DATABASE_URL=postgresql://user:pass@localhost:5432/gymbot

# Redis (optional - for caching)
REDIS_URL=

# ============================================
# WhatsApp Business API (Meta Cloud API)
# ============================================
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
WHATSAPP_BUSINESS_ACCOUNT_ID=your_business_account_id
WHATSAPP_ACCESS_TOKEN=your_access_token
WHATSAPP_APP_SECRET=your_app_secret
WHATSAPP_VERIFY_TOKEN=gymbuddy_verify_token_2026

# ============================================
# AI Configuration
# Choose your provider: "openai" or "gemini"
# ============================================
AI_PROVIDER=openai

# OpenAI (recommended - GPT-4o-mini)
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4o-mini

# Google Gemini (alternative)
GEMINI_API_KEY=your_gemini_api_key
GEMINI_MODEL=gemini-pro

# ============================================
# App Settings
# ============================================
APP_ENV=development
APP_SECRET_KEY=your-secret-key-min-32-chars-long

# Gym Details
GYM_NAME=FitZone Gym
GYM_PHONE=+919876543210

# ============================================
# Escalation Settings
# For HUMAN_HELP intent - when to escalate to human
# ============================================
MANAGER_PHONE=+919876543210
ESCALATION_EMAIL=manager@yourgym.com

# ============================================
# Webhook (for local development with ngrok)
# ============================================
WEBHOOK_URL=https://your-ngrok-url.ngrok.io/api/v1/webhooks/whatsapp
