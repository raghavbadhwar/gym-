{
  "name": "credverse-gateway",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:server": "NODE_ENV=development tsx --env-file=.env server/index.ts",
    "dev:full": "concurrently \"npm run dev\" \"npm run dev:server\"",
    "build": "tsx script/build.ts",
    "test": "npm run test:proxy",
    "pretest": "cd ../packages/shared-auth && npm run build",
    "test:proxy": "tsx --test server/routes/mobile-proxy.test.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "preview": "vite preview",
    "start": "NODE_ENV=production node dist/server/index.js"
  },
  "dependencies": {
    "@credverse/shared-auth": "file:../packages/shared-auth",
    "@sentry/node": "^10.29.0",
    "@types/jsonwebtoken": "^9.0.10",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.21.2",
    "framer-motion": "^12.23.25",
    "ioredis": "^5.9.3",
    "jsonwebtoken": "^9.0.3",
    "lucide-react": "^0.556.0",
    "neo4j-driver": "^6.0.1",
    "react": "^19.2.0",
    "react-countup": "^6.5.3",
    "react-dom": "^19.2.0",
    "react-fast-marquee": "^1.6.5",
    "react-parallax-tilt": "^1.7.319"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/express": "4.17.21",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "concurrently": "^9.1.2",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "prettier": "^3.8.1",
    "tsx": "^4.19.0",
    "typescript": "5.6.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4"
  }
}
